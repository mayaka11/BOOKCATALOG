<h1>新規投稿画面</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: books_path do |f| %>

  <h4>書籍名</h4>
  <%= f.text_area :title %>

  <h4>著者</h4>
  <%= f.text_area :author %>

  <h4>出版社</h4>
  <%= f.text_area :publisher %>

 <h4>MEMO</h4>
  <%= f.text_area :memo %>



<div class="check_box">
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
    <div class='form-check'>
   　 <%= tag.label do %>
    　  <%= tag.check_box %>
    　  <%= tag.text %>
    　<% end %>
    </div>
  <% end %>
</div>


  <%= f.submit '投稿' %>
<% end %>

