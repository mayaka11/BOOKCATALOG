<h1>編集画面</h1>

<%= form_with model: @book do |f| %>

  <h4>書籍名</h4>
  <%= f.text_area :title %>

  <h4>著者</h4>
  <%= f.text_area :author %>

  <h4>出版社</h4>
  <%= f.text_area :publisher %>

 <h4>MEMO</h4>
  <%= f.text_area :memo %>

  <h4>タグ</h4>
  <div class="check_box">
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
    <div class='form-check'>
   　 <%= tag.label do %>
    　  <%= tag.check_box %>
    　  <%= tag.text %>
    　<% end %>
    </div>
  <% end %>
</div>

  <%= f.submit '保存' %>

<% end %>