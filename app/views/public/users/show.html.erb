<h1>ユーザー情報</h1>
<div>
  <h3>名前 : <%= @user.name %></h3>
  <h3>自己紹介 : <%= @user.introduction %></h3>
  <h3>メールアドレス : <%= @user.email %></h3>


  <% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p><br>
  <p><%= link_to "いいねした投稿", favorites_user_path(@user) %></p><br>
 <% end %>
<tr>
    <th>follows</th>
    <th><%= link_to @user.followings.count, user_followings_path(@user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to @user.followers.count, user_followers_path(@user) %></th>
  </tr>
</div>

<% if current_user.following?(@user) %>
  <%= link_to "フォロー外す", relationships_path(@user.id), method: :delete %>
<% else %>
  <%= link_to "フォローする", relationships_path(@user.id), method: :post %>
<% end %>



<h1>ユーザーの投稿一覧</h1>

<% @books.each do |book| %>
<div>
  <p>書籍名：<%= link_to book.title, "/books/#{book.id}" %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>

<% end %>